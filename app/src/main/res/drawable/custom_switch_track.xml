<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Estado ligado (on) -->
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="#4CAF50" /> <!-- Cor quando o switch está ligado -->
            <corners android:radius="20dp" /> <!-- Ajusta os cantos arredondados, se necessário -->
        </shape>
    </item>
    <!-- Estado desligado (off) -->
    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <solid android:color="#D3D3D3" /> <!-- Cor quando o switch está desligado -->
            <corners android:radius="20dp" />
        </shape>
    </item>
</selector>
